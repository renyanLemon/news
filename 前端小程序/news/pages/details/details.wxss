page {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
}
.publisher-info {
 font-size: 30rpx;
 display: flex;
 flex-direction: row;
}
.face {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.words {
  margin-left: 20rpx;
}
.normal-info {
  display: flex;
  flex-direction: row;
  margin-top: 6rpx;
}
.original {
  margin-right: 16rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 0 10rpx;
}